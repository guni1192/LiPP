{
    "env": {
        "browser": true,
        "es6": true
    },
    "parser": "vue-eslint-parser",
    "extends":[
        "eslint:recommended",
        "plugin:vue/recommended",
        "vue"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017,
        "parser": "babel-eslint"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "camelcase": ["error", { "properties": "never" }]
    },
    "env": {
        "jasmine": true
    }
}
